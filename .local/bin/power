#!/bin/sh

options="Lock
Logout
Suspend
Hibernate
Reboot
Shutdown"

backlight_save() {
    brillo -O
}

choice=$(echo "$options" | rofi -dmenu -i -p "Power")

case "$choice" in
*Lock*)
    xautolock -locknow
    #lock
    ;;
*Logout*)
    herbstclient quit
    #swaymsg exit
    ;;
*Suspend*)
    sudo zzz -H
    ;;
*Hibernate*)
    sudo ZZZ
    ;;
*Reboot*)
    backlight_save
    sudo reboot
    ;;
*Shutdown*)
    backlight_save
    sudo poweroff
    ;;
esac
